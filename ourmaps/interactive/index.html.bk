<!DOCTYPE html>
<meta charset='utf-8'>

<style>

    .province:hover {
      fill: orange;
    }

    .concession:hover {
      fill: #0015a2;
    }

</style>

<svg width="960" height="720"></svg>

<!-- get d3 -->
<script src="https://d3js.org/d3.v4.min.js"></script>

<!-- js -->
<script> 

var svg = d3.select("svg"),
width = +svg.attr("width"),
height = +svg.attr("height");

d3.json("provinces.geojson", function(error, prov) {
    if (error) throw error;

    var projection = d3.geoMercator().fitSize([width, height], prov);
    var path = d3.geoPath().projection(projection);
    var u = d3.select('svg')
      .selectAll('path')
      .data(prov.features);

    u.enter()
      .append('path')
      .attr('d', path)
      .attr("class", "province")
      .style('stroke', 'black')
      .attr('fill', '#f1f4c7')

})

d3.json("Conc_01_2018.geojson", function(error, conc) {
    if (error) throw error;

    var projection = d3.geoMercator().fitSize([width, height], conc);
    var path = d3.geoPath().projection(projection);
    var v = d3.select('svg')
      .selectAll('path')
      .data(conc.features);

    v.enter()
      .append('path')
      .attr('d', path)
      .attr("class", "concession")
      .attr('fill', '#fa278a')
      .style('stroke', 'black');
})

</script>
